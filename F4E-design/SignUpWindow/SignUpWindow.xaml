<Window x:Class="F4E_design.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F4E_design"
        mc:Ignorable="d"
        WindowStyle="None"
        Icon="/signupwindow/images/logo.png"
        WindowState="Maximized"
        Title="לוקחים אחריות" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="405*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" Grid.Column="1" Grid.Row="1">
            <Border.Effect>
                <DropShadowEffect Direction="-86" Opacity="0.6" BlurRadius="90" ShadowDepth="30"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>
